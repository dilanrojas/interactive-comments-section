    fill: var(--light-gray-blue);
    transition: fill .08s ease;
  }

  .score-wrapper > div:hover svg {
    fill: var(--moderate-blue);
  }

  .header-wrapper {
    display: flex;
    align-items: center;
    gap: 1em;
  }

  .username {
    font-weight: var(--fw-semibold);
    font-size: var(--fs-450);
