    display: none;
    background-color: var(--moderate-blue);
    color: var(--white);
    padding-inline: .3em;
    font-size: var(--fs-350);
    border-radius: var(--rounded-5);
  }

  .created-at {
    color: var(--gray-blue);
  }

  .actions-wrapper {
    display: flex;
    align-items: center;
    justify-content: end;
  }

